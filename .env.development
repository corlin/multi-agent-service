# Development Environment Configuration for Patent MVP System

# Application Settings
APP_ENV=development
LOG_LEVEL=DEBUG
DEBUG=true
PYTHONPATH=/app/src

# Database Configuration
DATABASE_URL=postgresql://dev_user:dev_pass@localhost:5432/patent_dev_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=1800
REDIS_MAX_CONNECTIONS=10

# Patent Analysis Configuration
PATENT_DATA_CACHE_TTL=3600
PATENT_ANALYSIS_TIMEOUT=180
PATENT_REPORT_STORAGE_PATH=./reports/patent
PATENT_MAX_CONCURRENT_ANALYSES=2
PATENT_BATCH_SIZE=50

# External API Configuration (use test/mock keys)
CNKI_API_KEY=test_cnki_key
CNKI_API_TIMEOUT=15
CNKI_API_RATE_LIMIT=5
BOCHA_AI_API_KEY=test_bocha_key
BOCHA_AI_TIMEOUT=15
BOCHA_AI_RATE_LIMIT=3

# Google Patents API (development)
GOOGLE_PATENTS_API_KEY=test_google_key
GOOGLE_PATENTS_TIMEOUT=15

# Agent Configuration
AGENT_REGISTRY_AUTO_RELOAD=true
AGENT_EXECUTION_TIMEOUT=300
WORKFLOW_STATE_PERSISTENCE=false
AGENT_MAX_RETRIES=2
AGENT_RETRY_DELAY=2
HOT_RELOAD_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=10
METRICS_COLLECTION_ENABLED=true
METRICS_RETENTION_DAYS=7

# Security Configuration (relaxed for development)
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
API_KEY_REQUIRED=false
JWT_SECRET_KEY=dev-secret-key-not-for-production

# Performance Configuration
UVICORN_WORKERS=1
UVICORN_MAX_REQUESTS=100
UVICORN_MAX_REQUESTS_JITTER=10

# Logging Configuration
LOG_FORMAT=text
LOG_FILE_PATH=./logs/patent-service-dev.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=3

# File Storage Configuration
UPLOAD_MAX_SIZE=5MB
REPORT_RETENTION_DAYS=7
TEMP_FILE_CLEANUP_INTERVAL=1800

# Development-specific settings
MOCK_EXTERNAL_APIS=true
ENABLE_DEBUG_ENDPOINTS=true
SKIP_AUTH_FOR_TESTING=true